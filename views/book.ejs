<% include partials/header.ejs%>
<link rel="stylesheet" type="text/css" href="/style/book.css">

<div class="mg">
    <h2 class="text-center">Find your room</h2>
    <form class="row" action="/book" method="POST">
        <table class="my-table col-md-4">

            <tbody>
                <tr>
                    <td>Room Type</td>
                    <td><%=roomInfo.Name%></td>
                </tr>
                <tr>
                    <td>From</td>
                    <td><%=bookInfo.from%></td>
                </tr>
                <tr>
                    <td>To</td>
                    <td><%=bookInfo.to%></td>
                </tr>
                <tr>
                    <td>Adult</td>
                    <td><%=bookInfo.adult%></td>
                </tr>
                <tr>
                    <td>Children</td>
                    <td><%=bookInfo.children%></td>
                </tr>
                <tr>
                    <td>Price</td>
                    <td><%=roomInfo.Price%></td>
                </tr>
            </tbody>
        </table>
        <div class="col-md-8">

            <div class="input-group">
                <label for="FirstName">First Name</label>
                <input type="text" class="form-control" name="FirstName" id="FirstName"
                    <% if (userInfo.FirstName!= undefined) { %> value="<%=userInfo.FirstName%>" <%} else {}%> required>
            </div>
            <div class="input-group">
                <label for="LastName">Last Name</label>
                <input type="text" class="form-control" name="LastName" id="LastName"
                    <% if (userInfo.LastName!= undefined) { %> value="<%=userInfo.LastName%>" <%} else {}%> required>
            </div>
            <div class="input-group">
                <label for="DateOfBirth">Date Of Birth</label>
                <input type="date" class="form-control" name="DateOfBirth" id="DateOfBirth"
                    <% if (userInfo.phone!= undefined) { %> value="<%=userInfo.phone%>" <%} else {}%> required>
            </div>
            <div class="input-group">
                <label for="ID">ID</label>
                <input type="text" class="form-control" name="ID" id="ID" <% if (userInfo.ID!= undefined) { %>
                    value="<%=userInfo.ID%>" <%} else {}%> required>
            </div>

            <div class="input-group" id="phone">
                <label for="PhoneNumber">Phone Number</label>
                <input type="text" class="form-control" id="PhoneNumber" <% if (userInfo.phone!= undefined) { %>
                    value="<%=userInfo.phone%>" <%} else {}%> required>
                <div class="input-group-append">
                    <input type="button" class="btn btn-outline-secondary bt" value="Verify" onclick="mf()">
                </div>
            </div>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Note!</strong> You must verify your phone number before booking
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="recaptcha-container"></div>
            <div class="input-group" id="verify">
                <label for="verificationcode">Verification Code</label>
                <input type="text" class="form-control" id="verificationcode" placeholder="6 digits code" required>
                <div class="input-group-append">
                    <input type="button" class="btn btn-outline-secondary bt" value="Submit" onclick="submitCode()">
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-success" id="submitbtn" disabled>OK</button>
    </form>
</div>
<div>

</div>
</body>
