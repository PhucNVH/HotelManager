<script>
    $(document).ready(function () {
        // Activate Carousel with a specified interval
        $("#myCarousel").carousel({ interval: 3000, pause: "false" });
        $("#on").hide();
        $("#off").hide();
    });
</script>
<script>
    function send() {
        $.post("/message", {
            name: $("input[name=email]").val(),
            email: $("input[name=name]").val(),
            body: $('textarea#message').val()
        }, function (data, status) {
            if (data.Success) {
                $("#on").show();
                $("#off").hide();
            }
            else {
                $("#off").show();
                $("#on").hide();
            }
        });
        return false;
    }
</script>
